{
  "name": "Artisan Shelf Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "initializeCommand": "git config --global --add safe.directory '*'",
  "forwardPorts": [5430, 5431],
  "portsAttributes": {
    "5430": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "5431": {
      "label": "Backend API",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspace && git config --global core.autocrlf false && git config --global core.eol lf && pnpm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-eslint",
        "Prisma.prisma",
        "ms-vscode.vscode-node-debug2"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "relative",
        "files.eol": "\n",
        "git.autocrlf": "input"
      }
    }
  },
  "remoteUser": "node",
  "containerEnv": {
    "LANG": "C.UTF-8",
    "LC_ALL": "C.UTF-8",
    "LANGUAGE": "C.UTF-8"
  }
}
