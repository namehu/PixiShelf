{
  "name": "@pixishelf/api",
  "version": "0.1.0",
  "description": "Backend API for PixiShelf",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --dts --format esm,cjs --minify --out-dir dist",
    "start": "node --max-old-space-size=2048 --optimize-for-size dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "config": "tsx src/scripts/config-cli.ts",
    "config:validate": "npm run config validate",
    "config:health": "npm run config health",
    "config:show": "npm run config show",
    "config:env-example": "npm run config env-example",
    "config:wizard": "npm run config wizard"
  },
  "dependencies": {
    "@pixishelf/shared": "workspace:*",
    "@prisma/client": "^5.17.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "@fastify/cors": "^9.0.1",
    "fastify-plugin": "^4.5.1",
    "pino": "^9.2.0",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/mime-types": "^2.1.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "eslint": "^8.51.0",
    "prisma": "^5.17.0",
    "tsup": "^8.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2"
  }
}